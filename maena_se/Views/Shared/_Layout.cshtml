<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MAENA CENTRO INTEGRAL</title>

    <!-- Estilos y Scripts -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <!-- Materialize CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- Ícono de la página -->
    <link rel="icon" type="image/x-icon" href="~/Content/img/logo-maena_icon.ico" />

    <style>
        /* Ajuste general del body */
        body {
            background: rgb(240, 240, 240);
            margin: 0;
            padding: 0;
            display: flex;
        }

        /* Navbar fijo en la parte superior */
        nav {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: #009dd3 !important;
            z-index: 1000; /* Asegura que esté sobre todo */
        }

        /* Sidenav fijo */
        .sidenav {
            width: 250px;
            background-color: #1976D2;
            color: white;
            position: fixed;
            height: 100vh;
            
            padding-top: 20px;
        }
        .sidenav i {
                color: #e81c8a !important; /* Cambia el color de los íconos */
            }

        .sidenav a {
                color: white;
            }

        .sidenav .user-view {
                padding: 20px !important;
                text-align: center;
                padding-top: 100px !important;
                text-align: center; /* Centra todo el contenido */
            }

        .sidenav .user-view img {
                    width: 100px;
                    display: block;
                    margin: 0 auto; /* Centra la imagen */
                    border-radius: 50%;
                    
                }

            .sidenav .user-view .circle {
                height: 100px !important;
                width: 100px !important;
            }

        .sidenav .user-view a span {
                    display: block; /* Asegura que el nombre esté debajo del logo */
                    font-size: 16px;
                    font-weight: bold;
                    color: black;
                    margin-top: 10px; /* Espaciado entre la imagen y el texto */
                }

        /* Ajuste del contenido para que no se solape con el navbar */
        main {
            margin-top: 64px; /* Espacio para el navbar */
            margin-left: 250px; /* Espacio para el sidenav */
            padding: 20px;
            width: calc(100% - 250px);
        }

        /* Estilo del usuario en el sidenav */
        .sidenav .user-view a span.white-text.name {
            color: black !important;
            font-size: 16px;
            font-weight: 700;
        }

        .logout-link {
            display: flex;
            align-items: center;
        }

            .logout-link i {
                margin-right: 5px; /* Espaciado entre el icono y el texto */
            }


        /* Footer fijo */
        footer {
            text-align: center;
            padding: 10px;
            color: white;
            background: #009dd3;
            position: fixed;
            bottom: 0;
            width: 100%;
        }
    </style>
</head>
<body>

    @if (ViewBag.HideLayout == null || ViewBag.HideLayout == false)
    {
        <!-- Sidenav -->
    <ul id="sidenav-fixed" class="sidenav sidenav-fixed">
        <li>
            <div class="user-view">
                <a href="#"><img src="~/Content/img/logo-maena.svg" class="circle"></a>
                <a ><span class="white-text name">Hola, @Session["UserName"]</span></a>
            </div>
        </li>
        <li><a href="@Url.Action("Index", "Home")" class="waves-effect"><i class="material-icons">dashboard</i> Reportes</a></li>
        <li><a href="@Url.Action("GestionCitas", "Home")" class="waves-effect"><i class="material-icons">event</i> Gestión de Citas</a></li>
        <li><a href="@Url.Action("GestionUsuarios", "Home")" class="waves-effect"><i class="material-icons">people</i> Usuarios</a></li>
        <li><a href="@Url.Action("GestionPacientes", "Home")" class="waves-effect"><i class="material-icons">healing</i> Pacientes</a></li>
        <li><a href="#" class="waves-effect"><i class="material-icons">person</i> Terapeutas</a></li>
        <li><a href="#" class="waves-effect"><i class="material-icons">location_on</i> Consultorios</a></li>
        <li><a href="#" class="waves-effect"><i class="material-icons">settings</i> Configuración</a></li>
    </ul>

 <!-- Navbar -->
    <nav>
        <div class="nav-wrapper">
            <a href="#" class="brand-logo" style="margin-left: 500px;">MAENA CENTRO INTEGRAL</a>
            <ul class="right">
                <li>
                    <a href="#"><img src="~/Content/img/user-profile.png" class="circle" style="width: 40px; height: 40px;"></a>
                </li>
                <li>
                    <a href="#"><span>@Session["UserName"]</span></a>
                </li>
                <li>
                    <a href="@Url.Action("Logout", "Home")" class="logout-link">
                        <i class="material-icons left">exit_to_app</i> Cerrar Sesión
                    </a>
                </li>
            </ul>
        </div>
    </nav>

    }

    <!-- Contenido dinámico -->
    <main style="@(ViewBag.HideLayout == true ? "margin-left: 0;" : "margin-left: 250px;")">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer>
        <p>&copy; @DateTime.Now.Year - MAENA CENTRO INTEGRAL</p>
    </footer>

    <!-- Scripts -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            M.AutoInit();
        });
    </script>

</body>
</html>
